{% for extension in ['json'] %}
/srv/search/var/logs/*.{{ extension }} {
    su www-data www-data
    daily
    rotate 7
    notifempty
    missingok
    compress
    copytruncate
}
{% endfor %}

/var/log/elasticsearch/elasticsearch.log {
    su elasticsearch elasticsearch
    daily
    rotate 7
    notifempty
    missingok
    compress
    copytruncate
}
